<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @student do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label "Mod Number:" %><br>
  <%= f.number_field :mod %>

  <%= f.submit %>
<% end %>