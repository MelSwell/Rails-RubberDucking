<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @duck do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :description %><br>
  <%= f.text_field :description %><br>

  <%= f.label "Pick any student for this duck:" %><br>
  <%= f.collection_select :student_id, @students, :id, :name, {include_blank: true} %><br>

  <%= f.submit %>
<% end %>